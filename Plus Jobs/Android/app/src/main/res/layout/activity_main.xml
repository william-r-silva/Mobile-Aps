<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade"
    android:gravity="bottom|center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/redondo_branco_trasparente"
            android:orientation="vertical"
            android:padding="15sp">

            <EditText
                android:id="@+id/L_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:padding="10sp" />

            <EditText
                android:id="@+id/L_Senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:padding="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/L_Entrar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/redondo_gradiente"
                    android:padding="10dp"
                    android:text="Entrar"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/L_EntrarAnonimo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:background="@drawable/redondo_gradiente"
                    android:padding="10sp"
                    android:text="Entar como anônimo"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

            <Button
                android:id="@+id/L_Register"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="@android:color/transparent"
                android:text="Ainda não possui cadastro? Cadastre-se."
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/L_HackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30sp"
        app:srcCompat="@android:drawable/ic_menu_help" />

</LinearLayout>